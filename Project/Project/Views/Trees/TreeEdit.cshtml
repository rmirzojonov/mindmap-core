@model Project.Models.Tree

@{
    ViewData["Title"] = "Изменить дерево";
}

<h2>Изменить</h2>

<h4>Дерево</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TreeEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreeType" class="control-label"></label>
                <select asp-for="TreeType" asp-items="Html.GetEnumSelectList<TreeType>()" class="form-control"></select>
                <span asp-validation-for="TreeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListOfTrees">Назад в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
