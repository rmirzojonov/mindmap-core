@model Project.Models.Tree

@{
    ViewData["Title"] = "Добавить дерево";
}

<h2>Добавить дерево</h2>

<h4>Дерево</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTree">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Тип дерева</label>
                <select asp-for="TreeType" asp-items="Html.GetEnumSelectList<TreeType>()" class="form-control"></select>
                <span asp-validation-for="TreeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListOfTrees">Назад в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
